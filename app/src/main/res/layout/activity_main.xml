<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProxyActivity">

    <Button android:id="@+id/btn_no_proxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start no proxy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" android:onClick="startNoProxy"/>

    <Button android:onClick="startWithProxy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start with proxy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_no_proxy" />

</android.support.constraint.ConstraintLayout>